{
  "kind": "collectionType",
  "collectionName": "puppies",
  "info": {
    "singularName": "puppy",
    "pluralName": "puppies",
    "displayName": "Puppy",
    "description": "Available puppies for sale"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "breed": {
      "type": "string",
      "required": true
    },
    "age": {
      "type": "string",
      "required": true
    },
    "gender": {
      "type": "enumeration",
      "enum": ["Male", "Female"],
      "required": true
    },
    "color": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "available": {
      "type": "boolean",
      "default": true
    },
    "description": {
      "type": "text"
    },
    "tagline": {
      "type": "string"
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "puppy.feature"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "galleryImages": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
